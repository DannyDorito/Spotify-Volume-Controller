<Window x:Class="SpotifyVolumeController.UI.SpotifyVolumeControllerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Spotify Volume Controller" Height="295" Width="295" Unloaded="Window_Unloaded" SizeToContent="WidthAndHeight">
    <Grid>
        <ListBox x:Name="DebugListBox" d:ItemsSource="{d:SampleData ItemCount=10}" Margin="10,57,10,10" IsEnabled="False" FontFamily="Cascadia Mono SemiLight" FontSize="14" IsSynchronizedWithCurrentItem="False"/>
        <Button x:Name="AuthButton" Content="Authorise" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Click="Auth_Click" Width="275" Height="42" FontFamily="Cascadia Mono" FontSize="14"/>

    </Grid>
</Window>
