<Window x:Name="MainWindow" x:Class="SpotifyVolumeController.UI.SpotifyVolumeControllerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Spotify Volume Controller" Height="357" Width="340" Unloaded="Window_Unloaded" SizeToContent="WidthAndHeight">
    <Grid>
        <ListBox x:Name="DebugListBox" d:ItemsSource="{d:SampleData ItemCount=10}" Margin="10,65,10,10" IsEnabled="False" FontFamily="Cascadia Mono SemiLight" FontSize="14" IsSynchronizedWithCurrentItem="False" Background="{x:Null}" BorderBrush="#FF707070"/>
        <Button x:Name="AuthButton" Content="Authorise" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="Auth_Click" Width="265" Height="50" FontFamily="Cascadia Mono" FontSize="14" Background="{x:Null}" BorderBrush="#FF707070"/>
        <Button x:Name="SettingsButton" Content="⚙️" Margin="280,10,10,0" VerticalAlignment="Top" Height="50" FontFamily="Cascadia Mono" FontSize="24" Background="{x:Null}" BorderBrush="#FF707070" Click="SettingsButton_Click"/>

    </Grid>
</Window>
